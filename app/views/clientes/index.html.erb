<p id="notice"><%= notice %></p>

<h1>Lista Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Telefono</th>
      <th>Celular</th>
      <th>Barrio</th>
      <th>Direccion</th>
      <th>Referencia de la direcci√≥n</th>
      <th>Fecha</th>
      <th>Hora</th>
      <th>Ocacion</th>
      <% if can? :update, Cliente %>
        <th>Valor</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.telefono %></td>
        <td><%= cliente.celular %></td>
        <td><%= cliente.barrio %></td>
        <td><%= cliente.direccion %></td>
        <td><%= cliente.ref_dir %></td>
        <td><%= cliente.fecha %></td>
        <td><%= cliente.hora %></td>
        <td><%= cliente.ocacion %></td>
          <% if can? :update, Cliente %>
            <td><%= cliente.valor %></td>
          <% end %>  
          <% if can? :read, Cliente %>
           <td><%= link_to 'Ver', cliente %></td>
          <% end %>
          <% if can? :update, Cliente %>
            <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
          <% end %>
          <% if can? :destroy, cliente %>
            <td><%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: 'Seguro que quiere eliminar el registro?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Cliente %>
  <%= link_to 'Nuevo Cliente', new_cliente_path %>
<% end %>